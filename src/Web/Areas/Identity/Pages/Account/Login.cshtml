@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="container account-login-container" >
   
    <div class="row">
        <div class="col-md-12" style="display: inline-block;width:500px;margin-right:10px;">
            <section>
                <h2>@ViewData["Title"]</h2>

                <form method="post">
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Log in</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                    </div>
                    <p>
                        Note: For demo purposes use the following credentials.
                    </p>
                    <p>
                        User:     <b>faademo@karsun-llc.com</b>
                    </p>
                    <p>
                        Password: <b>Karsun@1234</b>
                    </p>
                </form>
            </section>
        </div>
        <div class="col-md-12" style="display: inline-block; width: 500px ">
            <section>
                <h2>Log in with external identity</h2>
                <div>
                    <a class="btn btn-outline-primary" asp-controller="Account" asp-action="GoogleLogin" style="width: 365px; margin-bottom: 3px; text-align:left;"><img src="~/images/GoogleLogo.png" style="width: 64px; height: 64px; margin-right: 19px;" />Log In With Google</a>
                </div>
                <div>
                    <a class="btn btn-outline-primary" asp-controller="MicrosoftAccount" asp-action="SignIn"><img src="~/images/Azure-Logo.png" style="width: 101px; height: 64px; margin-right: 0px; margin-left: -16px;" />Log In With Microsoft Account</a>
                </div>
            </section>
        </div>
    </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
